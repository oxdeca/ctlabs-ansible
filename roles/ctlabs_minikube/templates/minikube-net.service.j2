[Unit]
Description=Minikube Network
After=network.target
StartLimitIntervalSec=0

[Service]
Type=oneshot
RemainAfterExit=true

User=root
Group=root

ExecStart=/usr/bin/podman network create minikube --driver=bridge --opt mtu=1460 --subnet={{ ctlabs_minikube.defaults.service.net.subnet }} --gateway={{ ctlabs_minikube.defaults.service.net.gw }}
ExecStop=/usr/bin/podman network rm minikube

[Install]
WantedBy=multi-user.target
