{# -------------------------------------------------------------------------#}
{# File        : ctlabs-ansible/roles/ctlabs_httpd/templates/httpd.conf.j2  #}
{# Description : main httpd.conf                                            #}
{# ------------------------------------------------------------------------ #}

ServerRoot   {{ ctlabs_httpd.defaults.config[ctg_os_family].root_dir }}
DocumentRoot {{ ctlabs_httpd.defaults.config.data_dir            }}
User         {{ ctlabs_httpd.defaults.service[ctg_os_family].user    }}
Group        {{ ctlabs_httpd.defaults.service[ctg_os_family].group   }}

ServerAdmin  {{ ctlabs_httpd.defaults.config.admin      }}
ServerName   {{ ctlabs_httpd.defaults.config.servername }}
{% if ctg_os_family == 'redhat' %}
Listen       {{ ctlabs_httpd.defaults.config.listen     }}
{% endif %}

ErrorLog     {{ ctlabs_httpd.defaults.config[ctg_os_family].log.dir }}/{{ ctlabs_httpd.defaults.config[ctg_os_family].log.error }}
LogLevel     {{ ctlabs_httpd.defaults.config[ctg_os_family].log.level }}

{% if ctg_os_family == 'redhat' %}
Include         conf.modules.d/*.conf
IncludeOptional conf.d/*.conf
{% elif ctg_os_family == 'debian' %}
IncludeOptional mods-enabled/*.load
IncludeOptional mods-enabled/*.conf
Include         ports.conf
IncludeOptional conf-enabled/*.conf
IncludeOptional sites-enabled/*.conf
{% endif %}

<Directory />
  AllowOverride  None
  Require        all denied
</Directory>

<Directory /var/www>
  AllowOverride  None
  Require        all granted
</Directory>

<Directory /var/www/html>
  Options        Indexes FollowSymLinks
  AllowOverride  None
  Require        all granted
</Directory>

<Files .ht*>
  Require all denied
</Files>

<IfModule dir_module>
  DirectoryIndex index.html
</IfModule>


<IfModule log_config_module>
  LogFormat "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\"" combined
  LogFormat "%h %l %u %t \"%r\" %>s %b" common

  <IfModule logio_module>
    LogFormat "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\" %I %O" combinedio
  </IfModule>

  CustomLog {{ ctlabs_httpd.defaults.config[ctg_os_family].log.dir }}/{{ ctlabs_httpd.defaults.config[ctg_os_family].log.access }} combined
</IfModule>

<IfModule alias_module>
  ScriptAlias /cgi-bin/ /var/www/cgi-bin/
</IfModule>

<Directory /var/www/cgi-bin>
  AllowOverride  None
  Options        None
  Require        all granted
</Directory>

<IfModule mime_module>
  TypesConfig /etc/mime.types
  AddType  application/x-compress .Z
  AddType  application/x-gzip .gz .tgz
  # AddHandler cgi-script .cgi
  # AddHandler type-map var
  AddType text/html .shtml
  AddOutputFilter  INCLUDES  .shtml
</IfModule>

AddDefaultCharset  UTF-8

<IfModule mime_magic_module>
  MIMEMagicFile conf/magic
</IfModule>

#ErrorDocument 500 "The server made a boo boo"
EnableSendfile on

<Location />
  AuthType           Basic
  AuthName          "Restricted Area"
  AuthBasicProvider file
  AuthUserFile      httpd.passwd
  Require           valid-user # all granted
</Location>
