myhostname          = {{ ansible_nodename }}
mydomain            = {{ ansible_nodename.split('.')[1:] }}
myorigin            = $mydomain

inet_interfaces     = localhost
inet_protocols      = ipv4

relayhost           =
mydestination       = $myhostname, localhost.$mydomain, localhost, $mydomain

mailbox_size_limit  = 0
home_mailbox        = mail/

